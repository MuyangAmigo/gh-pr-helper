{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Your Pull Requests",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent"
        },
        {
            "type": "Container",
            "$data": "${items}",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "wrap": true,
                                    "text": "${number}"
                                }
                            ],
                            "width": "auto"
                        },
                        {
                            "type": "Column",
                            "spacing": "Medium",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "wrap": true,
                                    "text": "${title}"
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "spacing": "Small",
                            "verticalContentAlignment": "Center",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "[View In Github](${url})",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}